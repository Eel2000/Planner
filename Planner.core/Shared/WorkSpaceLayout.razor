@inherits LayoutComponentBase

<PageTitle>Planner.core</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary" Fixed="false" Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Custom.Brands.Facebook" Color="Color.Inherit" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    <MudPaper Style="overflow:hidden; position:relative;height: 100vh;">
        <MudDrawerContainer Class="mud-height-full">
            <MudDrawer @bind-Open="@open" Fixed="false" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
                <MudNavMenu>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Filled.Workspaces">WorkSpaces</MudNavLink>
                    <MudNavLink Href="/fetchdata" Icon="@Icons.Filled.AddToQueue">Create WorkSpace</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
            <MudMainContent>
                @Body
            </MudMainContent>
        </MudDrawerContainer>
    </MudPaper>
</MudLayout>

@code
{
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}
